{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "nom": {
      "type": "string",
      "maxLength": 40,
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "prix": {
      "type": "float",
      "required": true
    },
    "remise": {
      "type": "decimal",
      "required": true,
      "default": 0,
      "min": 0,
      "max": 100
    },
    "stock": {
      "type": "integer",
      "required": true,
      "min": 0,
      "default": 0
    },
    "isVendable": {
      "type": "boolean",
      "default": true,
      "required": false
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::categorie.categorie",
      "inversedBy": "articles"
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "commentaires": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::commentaire.commentaire",
      "mappedBy": "article"
    }
  }
}
